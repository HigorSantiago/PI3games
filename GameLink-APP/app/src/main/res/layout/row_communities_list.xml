<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:id="@+id/image_community_banner"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/valorant_icon" />

    <TextView
        android:id="@+id/text_community_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comunidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_community_banner" />

    <TextView
        android:id="@+id/text_count_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 membros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_community_title" />


</androidx.constraintlayout.widget.ConstraintLayout>